<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical"
    tools:context="com.xxx.gid.ui.my.activity.FeedBackActivity">

    <include layout="@layout/include_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feed_back_type"
            android:textColor="#333333"
            android:textSize="16dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_edit_feedback"
            android:padding="8dp">

            <TextView
                android:id="@+id/feed_back_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="0/200"
                android:textColor="#999999"
                android:textSize="10dp" />

            <EditText
                android:id="@+id/feed_back_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/feed_back_number"
                android:background="@color/colorTransparent"
                android:gravity="top"
                android:hint="@string/feed_back_edit_hint"
                android:lineSpacingExtra="5dp"
                android:maxLength="200"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="12dp" />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/feed_back_btn"
        android:layout_width="330dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:background="@drawable/selector_btn_big"
        android:gravity="center"
        android:text="@string/feed_back_btn"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

</LinearLayout>